<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="publishDemand"
        android:text="发布需求"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="cancelDemand"
            android:text="需求方取消需求"/>
        <EditText
            android:id="@+id/tv_cancel_demand_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:text=""/>
    </LinearLayout>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="getMyPublishDemandList"
        android:text="我发布的需求列表"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="servicePartyBidDemand"
        android:text="服务方竞标需求"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="demandPartySelectServiceParty"
        android:text="需求方选择服务方"/>

</LinearLayout>