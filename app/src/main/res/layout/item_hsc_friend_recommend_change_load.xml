<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable name="friendRecommendChangeLoadModel"
                  type="com.slash.youth.ui.viewmodel.FriendRecommendChangeLoadModel"/>
    </data>
    <LinearLayout
        android:layout_width="127dp"
        android:layout_height="183dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="127dp"
            android:layout_height="183dp"
            android:background="@drawable/shape_rounded_my_news_center"
        >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:onClick="@{friendRecommendChangeLoadModel.changeALotFriendRecommend}"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/changebatch_icon"
                />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal" android:layout_marginTop="5dp"
                    android:text="换一批"
                    android:textColor="#CCCCCC"
                    android:textSize="13sp"/>
            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>
</layout>
