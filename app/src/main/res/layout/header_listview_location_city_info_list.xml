<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable name="headerLocationCityInfoModel"
                  type="com.slash.youth.ui.viewmodel.HeaderLocationCityInfoModel"/>
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
       >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="17dp"
            android:text="当前定位"
            android:textColor="#333333"
            android:textSize="15dp"/>

        <TextView
            android:id="@+id/tv_current_city"
            android:layout_width="85dp"
            android:layout_height="35dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/shape_search_city"
            android:drawableLeft="@mipmap/city_dingwei_icon"
            android:drawablePadding="4dp"
            android:gravity="center_vertical"
            android:paddingLeft="22dp"
            android:text="苏州1"
            android:textColor="#333333"
            android:textSize="13.5sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="最近访问"
            android:textColor="#666666"
            android:textSize="13.5sp"/>

        <LinearLayout
            android:id="@+id/ll_recentlyCity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_city_first"
                android:layout_width="85dp"
                android:layout_height="35dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/shape_search_city"
                android:gravity="center"
                android:text="苏州2"
                android:textColor="#333333"
                android:textSize="13.5sp"
                />
            <TextView
                android:id="@+id/tv_city_second"
                android:layout_width="85dp"
                android:layout_height="35dp"
                android:layout_marginLeft="14dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/shape_search_city"
                android:gravity="center"
                android:text="苏州3"
                android:textColor="#333333"
                android:textSize="13.5sp"
                />
            <TextView
                android:id="@+id/tv_city_thrid"
                android:layout_width="85dp"
                android:layout_height="35dp"
                android:layout_marginLeft="14dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/shape_search_city"
                android:gravity="center"
                android:text="苏州4"
                android:textColor="#333333"
                android:textSize="13.5sp"
                />
        </LinearLayout>
    </LinearLayout>
</layout>


