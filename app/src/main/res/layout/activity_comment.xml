<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable name="commentModel" type="com.slash.youth.ui.viewmodel.CommentModel"/>
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/shape_rectangle_gradient_publish_demand2"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">

            <ImageView
                android:layout_width="36dp"
                android:layout_height="21dp"
                android:layout_centerVertical="true"
                android:onClick="@{commentModel.gotoBack}"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:src="@mipmap/nav_back"
            />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="评价"
                android:textColor="#ffffff"
                android:textSize="17sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="12dp"
                android:text="完成"
                android:textColor="#ffffff"
                android:textSize="15sp"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-10dp"
            android:background="@mipmap/comment_mark_bg"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="31dp"
                android:orientation="horizontal">
                <View
                    android:layout_width="49dp"
                    android:layout_height="2dp"
                    android:layout_gravity="center_vertical"
                    android:background="#E5E5E5"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="29dp"
                    android:text="给他打分"
                    android:textColor="#CCCCCC"
                    android:textSize="14sp"/>

                <View
                    android:layout_width="49dp"
                    android:layout_height="2dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="29dp"
                    android:background="#E5E5E5"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="13dp"
                android:orientation="horizontal"
            >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="服务质量"
                    android:textColor="#999999"
                    android:textSize="15sp"/>

                <LinearLayout
                    android:id="@+id/ll_service_quality_stars"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="27dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="@{commentModel.giveMarks}"
                        android:src="@mipmap/default_star"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="9dp"
                        android:onClick="@{commentModel.giveMarks}"
                        android:src="@mipmap/default_star"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="9dp"
                        android:onClick="@{commentModel.giveMarks}"
                        android:src="@mipmap/default_star"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="9dp"
                        android:onClick="@{commentModel.giveMarks}"
                        android:src="@mipmap/default_star"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="9dp"
                        android:onClick="@{commentModel.giveMarks}"
                        android:src="@mipmap/default_star"/>
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="13dp"
                android:orientation="horizontal"
            >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="完成速度"
                    android:textColor="#999999"
                    android:textSize="15sp"/>

                <LinearLayout
                    android:id="@+id/ll_complete_speed_stars"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="27dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="@{commentModel.giveMarks}"
                        android:src="@mipmap/default_star"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="9dp"
                        android:onClick="@{commentModel.giveMarks}"
                        android:src="@mipmap/default_star"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="9dp"
                        android:onClick="@{commentModel.giveMarks}"
                        android:src="@mipmap/default_star"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="9dp"
                        android:onClick="@{commentModel.giveMarks}"
                        android:src="@mipmap/default_star"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="9dp"
                        android:onClick="@{commentModel.giveMarks}"
                        android:src="@mipmap/default_star"/>
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="52dp"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="13dp"
                android:orientation="horizontal"
            >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="服务态度"
                    android:textColor="#999999"
                    android:textSize="15sp"/>

                <LinearLayout
                    android:id="@+id/ll_service_attitude_stars"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="27dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="@{commentModel.giveMarks}"
                        android:src="@mipmap/default_star"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="9dp"
                        android:onClick="@{commentModel.giveMarks}"
                        android:src="@mipmap/default_star"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="9dp"
                        android:onClick="@{commentModel.giveMarks}"
                        android:src="@mipmap/default_star"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="9dp"
                        android:onClick="@{commentModel.giveMarks}"
                        android:src="@mipmap/default_star"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="9dp"
                        android:onClick="@{commentModel.giveMarks}"
                        android:src="@mipmap/default_star"/>
                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="-10dp"
            android:layout_weight="1"
            android:background="@drawable/shape_comment_content_bg"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">
                <View
                    android:layout_width="49dp"
                    android:layout_height="2dp"
                    android:layout_gravity="center_vertical"
                    android:background="#E5E5E5"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="29dp"
                    android:text="补充描述"
                    android:textColor="#CCCCCC"
                    android:textSize="14sp"/>

                <View
                    android:layout_width="49dp"
                    android:layout_height="2dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="29dp"
                    android:background="#E5E5E5"/>
            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="13dp"
                android:layout_marginRight="13dp"
                android:layout_marginTop="16dp"
            >
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/shape_comment_content_bg"
                    android:gravity="top|left"
                    android:hint="请输入评价，上限150个字"
                    android:padding="10dp"
                    android:textColorHint="#CCCCCC"
                    android:textSize="14dp"
                />

                <ImageView
                    android:layout_width="79dp"
                    android:layout_height="79dp"
                    android:layout_gravity="bottom|right"
                    android:layout_marginBottom="3dp"
                    android:layout_marginRight="3dp"
                    android:src="@mipmap/complete_seal"/>

            </FrameLayout>

        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="-10dp"
            android:layout_marginTop="15dp"
            android:background="#ffffff">

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/btn_next_step"
                android:text="分享"
                android:textColor="#FFFFFF"
                android:textSize="15sp"/>

        </FrameLayout>

    </LinearLayout>
</layout>
