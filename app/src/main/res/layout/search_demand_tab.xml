<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
<data>
    <variable name="searchDemandTabModel"
        type="com.slash.youth.ui.viewmodel.SearchDemandTabModel"/>
</data>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:orientation="horizontal"
        android:background="#ffffff"
        >


        <RelativeLayout
            android:onClick="@{searchDemandTabModel.demandType}"
            android:id="@+id/rl_tab_line"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:clickable="true"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:id="@+id/tv_line"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="需求类型"
                    android:textSize="15dp"
                    android:textColor="#333333" />

                <ImageView
                    android:id="@+id/iv_line_icon"
                    android:layout_marginLeft="6dp"
                    android:layout_width="10dp"
                    android:src="@mipmap/free_play"
                    android:layout_height="match_parent" />
            </LinearLayout>

        </RelativeLayout>

        <View
            android:id="@+id/view_user"
            android:layout_marginLeft="2dp"
            android:layout_width="0.5dp"
            android:layout_height="20dp"
            android:background="#e5e5e5"
            android:layout_gravity="center"/>

        <RelativeLayout
            android:onClick="@{searchDemandTabModel.userType}"
            android:id="@+id/rl_tab_user"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:clickable="true"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:id="@+id/tv_user"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="用户类型"
                    android:textSize="15dp"
                    android:textColor="#333333" />

                <ImageView
                    android:id="@+id/iv_user_icon"
                    android:layout_marginLeft="6dp"
                    android:layout_width="10dp"
                    android:src="@mipmap/free_play"
                    android:layout_height="match_parent" />
            </LinearLayout>

        </RelativeLayout>

        <View
            android:layout_marginLeft="2dp"
            android:layout_width="0.5dp"
            android:layout_height="20dp"
            android:background="#e5e5e5"
            android:layout_gravity="center"/>

        <RelativeLayout
            android:onClick="@{searchDemandTabModel.area}"
            android:id="@+id/rl_tab_area"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:clickable="true"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:id="@+id/tv_area"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="苏州"
                    android:textSize="15dp"
                    android:textColor="#333333" />

                <ImageView
                    android:id="@+id/iv_area_icon"
                    android:layout_marginLeft="6dp"
                    android:layout_width="10dp"
                    android:src="@mipmap/free_play"
                    android:layout_height="match_parent" />
            </LinearLayout>

        </RelativeLayout>

        <View
            android:layout_marginLeft="2dp"
            android:layout_width="0.5dp"
            android:layout_height="20dp"
            android:background="#e5e5e5"
            android:layout_gravity="center"/>

        <RelativeLayout
            android:onClick="@{searchDemandTabModel.sort}"
            android:id="@+id/rl_tab_sort"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:clickable="true"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:id="@+id/tv_sort"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="排序"
                    android:textSize="15dp"
                    android:textColor="#333333" />

                <ImageView
                    android:id="@+id/iv_time_icon"
                    android:layout_marginLeft="6dp"
                    android:layout_width="10dp"
                    android:src="@mipmap/free_play"
                    android:layout_height="match_parent" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#d1cece"
        />
</LinearLayout>
</layout>
