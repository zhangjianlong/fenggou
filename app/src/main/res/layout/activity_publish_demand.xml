                            android:layout_weight="1"/>
                        <View
                            android:layout_width="2dp"
                            android:layout_height="24dp"
                            android:layout_gravity="center_vertical"
                            android:background="#dedede"/>

                        <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="16dp"
                            android:background="@android:color/transparent"
                            android:src="@mipmap/time_icon"/>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="38dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="49dp"
                        android:layout_height="2dp" android:background="#999999"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:text="想让谁看到你的需求"
                        android:textColor="#666666" android:textSize="15dp"/>
                    <View
                        android:layout_width="49dp"
                        android:layout_height="2dp"
                        android:layout_marginLeft="8dp" android:background="#999999"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginTop="28dp"
