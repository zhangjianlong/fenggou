<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="118dp"
        android:background="#ffffff"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="104dp"
            android:layout_marginLeft="11dp"
            android:layout_marginRight="11dp"
            android:layout_marginTop="5dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

                <ImageView
                    android:id="@+id/iv_item_listview_home_demand_avatar"
                    android:layout_width="58.5dp"
                    android:layout_height="58.5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="14dp"
                    android:src="@mipmap/home_head_sculpture"/>
                <TextView
                    android:id="@+id/tv_item_listview_home_demand_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="9dp"
                    android:layout_marginTop="19dp"
                    android:layout_toRightOf="@id/iv_item_listview_home_demand_avatar"
                    android:text="做一个互联网公司企业宣传策划案"
                    android:textColor="#333333"
                    android:textSize="14.5sp"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/tv_item_listview_home_demand_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_item_listview_home_demand_title"
                    android:layout_marginLeft="9dp"
                    android:layout_marginTop="14dp"
                    android:layout_toRightOf="@id/iv_item_listview_home_demand_avatar"
                    android:text="任务时间：9月18日上午8点"
                    android:textColor="#333333"
                    android:textSize="13.5sp"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_item_listview_home_demand_date"
                    android:layout_marginLeft="9dp"
                    android:layout_marginTop="14dp"
                    android:layout_toRightOf="@id/iv_item_listview_home_demand_avatar"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_search_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="报价:￥300"
                        android:textColor="#ff7333"
                        android:textColorHighlight="#ffffff"
                        android:textSize="14sp"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/tv_search_line"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:background="@mipmap/tab1"
                        android:paddingBottom="2dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:paddingTop="2dp"
                        android:text="线上"
                        android:textColor="#ffffff"/>
                    <TextView
                        android:id="@+id/tv_search_consult"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:background="@mipmap/tab12"
                        android:paddingBottom="2dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:paddingTop="2dp"
                        android:text="咨询"
                        android:textColor="#ffffff"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_item_listview_home_demand_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iv_item_listview_home_demand_avatar"
                    android:layout_marginLeft="17dp"
                    android:layout_marginTop="7dp"
                    android:text="曹文成"
                    android:textColor="#999999"
                    android:textSize="11.5sp"/>

            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
