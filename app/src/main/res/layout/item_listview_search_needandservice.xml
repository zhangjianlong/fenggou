<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="104dp"
        android:background="#ffffff"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="104dp"
        android:layout_marginBottom="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <FrameLayout
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="15dp">
                <ImageView
                    android:id="@+id/iv_item_listview_home_demand_avatar"
                    android:layout_width="58dp"
                    android:layout_height="58dp"
                    android:src="@mipmap/assistant_icon"/>
                <ImageView
                    android:id="@+id/iv_authentication"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|right"
                    android:src="@mipmap/tab_authentication"/>

            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="15dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_item_listview_home_demand_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="做一个互联网公司企业宣传策划案"
                    android:textColor="#333333"
                    android:textSize="15sp"/>
                <TextView
                    android:id="@+id/tv_item_listview_home_demand_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:text="任务时间:9月18日 8:30"
                    android:textColor="#333333"
                    android:textSize="14sp"/>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_item_listview_home_demand_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="18dp"
                android:text="曹文成"
                android:textColor="#CCCCCC"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/tv_quote"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="21dp"
                android:text="报价:¥300"
                android:textColor="#FF7333"
                android:textSize="13sp"/>

            <View android:layout_width="0dp" android:layout_height="0dp"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/tv_line"
                android:layout_width="wrap_content"
                android:layout_height="16dp"
                android:layout_gravity="center_vertical"
                android:paddingLeft="2dp" android:paddingRight="2dp"
                android:text="线上"
                android:textColor="#31C5E4"
                android:textSize="12sp"
                android:background="@drawable/shape_search_item_bg"
                />
            <TextView
                android:id="@+id/tv_pay"
                android:layout_width="wrap_content"
                android:layout_height="16dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="10dp"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:text="一次性支付"
                android:textColor="#31C5E4"
                android:textSize="12sp"
                android:background="@drawable/shape_search_item_bg"
                />

        </LinearLayout>
       </LinearLayout>

    </LinearLayout>
