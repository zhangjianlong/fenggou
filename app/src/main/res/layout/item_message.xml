<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.odbpo.fenggou.feature.message.MessageItemViewModel" />
    </data>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/app.theme.background_f7f7f7"
        android:orientation="vertical"
        android:padding="@dimen/app.padding.normal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/app.margin.normal"
            android:background="@color/app.theme.background">

            <android.support.v7.widget.AppCompatTextView
                style="@style/App.Theme.TextAppearance.ww.normal.black333"
                android:drawableLeft="@drawable/voice"
                android:drawablePadding="@dimen/app.padding.normal"
                android:text="订单通知" />

            <android.support.v7.widget.AppCompatTextView
                style="@style/App.Theme.TextAppearance.ww.normal.black999"
                android:layout_alignParentRight="true"
                android:text="2017-07-07 15:42" />
        </RelativeLayout>


        <android.support.v7.widget.AppCompatTextView
            style="@style/App.Theme.TextAppearance.ww.normal.black333"
            android:layout_height="74dp"
            android:layout_marginTop="@dimen/app.margin.normal"
            android:background="@color/app.theme.background"
            android:text="sdaaaaaaaaaa" />

        <android.support.v7.widget.AppCompatTextView
            style="@style/App.Theme.TextAppearance.mw.normal.black999"
            android:drawableRight="@drawable/right"
            android:text="查看订单" />


    </LinearLayout>


</layout>