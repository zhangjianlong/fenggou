<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable name="pagerHomeBaseModel" type="com.slash.youth.ui.viewmodel.PagerHomeBaseModel"/>
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#31c5e4">

            <EditText
                android:layout_width="230dp"
                android:layout_height="30dp"
                android:layout_centerInParent="true"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:background="@mipmap/nav_search_bg"
                android:drawableLeft="@mipmap/nav_icon_search"
                android:drawablePadding="10dp"
                android:hint="找需求、找服务、找人"
                android:paddingLeft="10dp"
                android:textColorHint="#ffffff"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/tv_pager_home_base_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="11dp"
                android:text="苏州"
                android:textColor="#ffffff"
                android:textSize="15sp"/>
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="11dp"
                android:background="@android:color/transparent"
                android:src="@mipmap/nav_screen_icon"/>
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/tv_pager_home_base_location"
                android:background="@android:color/transparent"
                android:src="@mipmap/nav_pull_down_icon"/>

        </RelativeLayout>

        <RelativeLayout android:layout_width="match_parent"
                        android:layout_height="154.5dp">
            <android.support.v4.view.ViewPager
                android:id="@+id/vp_pager_home_base_advertisement"
                android:layout_width="match_parent"
                android:layout_height="154.5dp"
            />
            <LinearLayout
                android:id="@+id/ll_pager_home_base_advindicators"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="15dp"
                android:orientation="horizontal">

                <ImageView android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:src="@mipmap/indicator_circle_choose"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:src="@mipmap/indicator_circle_unchoose"/>

            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="42.5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="true"
                android:drawableBottom="@drawable/selector_home_base_list_tab_bottom_drawable"
                android:enabled="true"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:gravity="center"
                android:text="浏览需求"
                android:textColor="@color/selector_home_base_list_tab_textcolor"
                android:textSize="15sp"/>
            <TextView

                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="true"
                android:drawableBottom="@drawable/selector_home_base_list_tab_bottom_drawable"
                android:enabled="true"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:gravity="center"
                android:text="浏览服务"
                android:textColor="@color/selector_home_base_list_tab_textcolor"
                android:textSize="15sp"/>

        </LinearLayout>

        <View android:layout_width="match_parent" android:layout_height="0.2dp"
              android:background="#e5e5e5"/>


    </LinearLayout>
</layout>
