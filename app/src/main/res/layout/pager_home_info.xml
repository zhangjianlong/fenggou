<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable name="pagerHomeInfoModel" type="com.slash.youth.ui.viewmodel.PagerHomeInfoModel"/>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:background="#31C5E4">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="消息"
                android:textColor="#FFFFFF"
                android:textSize="17sp"
            />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="16dp"
                android:src="@mipmap/icon_search_home_contacts"/>

        </RelativeLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="#31C5E4"></FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="87dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="-43dp"
            android:background="@drawable/shape_rounded_my_news_center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:src="@mipmap/task_icon_shadow"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="17dp"
                android:orientation="vertical">

                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:text="我的任务中心"
                          android:textColor="#31C5E4"
                          android:textSize="15sp"/>

                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:layout_marginTop="13dp"
                          android:text="发布的需求和服务都在这里哦"
                          android:textColor="#999999"
                          android:textSize="12dp"/>

            </LinearLayout>

            <View android:layout_width="0dp" android:layout_height="0dp" android:layout_weight="1"/>

            <TextView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="6dp"
                android:background="@drawable/shape_circle_news_count"
                android:gravity="center"
                android:text="1"
                android:textColor="#FFFFFF"
                android:textSize="13sp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="24dp"
                android:src="@mipmap/nav_goto_my_newscenter"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="9dp"
            android:background="#E5E5E5"/>
        <ListView
            android:id="@+id/lv_pager_home_info"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
        >

        </ListView>


    </LinearLayout>

</layout>
