<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable name="demandDetailLocationModel"
                  type="com.slash.youth.ui.viewmodel.DemandDetailLocationModel"/>
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#31c5e4"
            android:padding="11dp">
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@android:color/transparent"
                android:onClick="@{demandDetailLocationModel.goBack}"
                android:src="@mipmap/map_nav_back"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="定位"
                android:textColor="#ffffff"
                android:textSize="17sp"
            />

        </RelativeLayout>

        <com.amap.api.maps2d.MapView

            android:id="@+id/mapview_demand_detail"
            android:layout_width="match_parent"
            android:layout_height="308dp">

        </com.amap.api.maps2d.MapView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="11dp"
            android:layout_marginRight="11dp"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
            >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{demandDetailLocationModel.nearName}"
                    android:textColor="#333333"
                    android:textSize="14.5sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="@{demandDetailLocationModel.nearDistance}"
                    android:textColor="#cccccc"
                    android:textSize="14.5sp"
                    android:visibility="invisible"/>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="9dp"
                android:layout_marginTop="11dp"
            >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{demandDetailLocationModel.nearAddress}"
                    android:textColor="#cccccc"
                    android:textSize="13.5sp"/>

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:background="@android:color/transparent"
                    android:src="@mipmap/jihuo_icon"
                    android:visibility="invisible"
                />

            </RelativeLayout>
        </LinearLayout>


    </LinearLayout>
</layout>
