<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable name="SearchNeedResultTabModel"
            type="com.slash.youth.ui.viewmodel.SearchNeedResultTabModel"/>
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.slash.youth.ui.view.DropDownMenu
            android:visibility="gone"
            android:id="@+id/dropDownMenu"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:ddmenuTextSize="15sp"
            app:ddtextUnselectedColor="@color/drop_down_unselected"
            app:ddtextSelectedColor="@color/drop_down_selected"
            app:dddividerColor="@color/gray"
            app:ddunderlineColor="@color/gray"
            app:ddmenuSelectedIcon="@mipmap/free_pay_jihuo"
            app:ddmaskColor="@color/mask_color"
            app:ddmenuBackgroundColor="@color/white"
            app:ddmenuUnselectedIcon="@mipmap/free_play">
        </com.slash.youth.ui.view.DropDownMenu>

     <FrameLayout
         android:id="@+id/Fl_tab"
         android:layout_width="match_parent"
         android:layout_height="wrap_content">
     </FrameLayout>
     <FrameLayout
            android:id="@+id/fl_showSearchResult"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

           <ListView
               android:id="@+id/lv_searchTab"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:background="#f1f1f1"
                android:divider="#00000000"
                android:dividerHeight="0dip"
                >
           </ListView>
        </FrameLayout>

    </LinearLayout>
</layout>