<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable name="searchActivityHotServiceModel"
            type="com.slash.youth.ui.viewmodel.SearchActivityHotServiceModel"/>
    </data>

    <!--搜索框-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#edf1f2"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#31c5e4">

            <EditText
                android:id="@+id/et_activity_search_association"
                android:layout_width="259dp"
                android:layout_height="30dp"
                android:layout_centerInParent="true"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/shape_search_activity_box_bg"
                android:drawableLeft="@mipmap/zoom_search_activity"
                android:drawablePadding="10dp"
                android:hint="找需求、找服务、找人"
                android:paddingLeft="10dp"
                android:textColorHint="#666666"
                android:textSize="15sp"/>

            <ImageButton
                android:id="@+id/ib_subSearch_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:background="@android:color/transparent"
                android:src="@mipmap/nav_back"

                />

            <TextView
                android:id="@+id/tv_search_result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="11dp"
                android:clickable="true"
                android:enabled="true"
                android:focusable="true"
                android:text="取消"
                android:textColor="#ffffff"
                android:textSize="15sp"/>

        </RelativeLayout>

    <!--展示不同的热搜页面-->
    <LinearLayout
        android:id="@+id/ll_activity_hotService"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:id="@+id/tv_search_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="11dp"
                android:text="热搜服务"
                android:textColor="#333333"
                android:textSize="14.5sp"/>

            <ImageButton
                android:id="@+id/ivbtn_activity_search_main_categories"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="11dp"
                android:background="@android:color/transparent"
                android:src="@mipmap/xiangxia_icon"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@id/ivbtn_activity_search_main_categories"
                android:text="IT互联网"
                android:textColor="#333333"
                android:textSize="14.5sp"/>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:background="#edf1f2"/>

        <LinearLayout android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ListView
                android:id="@+id/lv_activity_search_second_skilllable_list"
                android:layout_width="96dp"
                android:layout_height="match_parent">
            </ListView>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#edf1f2">
                <ScrollView
                    android:id="@+id/sv_activity_search_third_skilllabel"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    >

                    <LinearLayout
                        android:id="@+id/ll_activity_search_third_skilllabel"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                    </LinearLayout>

                </ScrollView>

            </RelativeLayout>

        </LinearLayout>

         </LinearLayout>
      </LinearLayout>
</layout>
