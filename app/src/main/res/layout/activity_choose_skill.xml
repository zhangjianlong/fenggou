<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable name="activityChooseSkillModel"
                  type="com.slash.youth.ui.viewmodel.ActivityChooseSkillModel"/>
    </data>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/choose_skill_bg"
    >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="28dp"
            android:text="专属技能"
            android:textColor="#000000"
            android:textSize="36sp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginTop="115dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="行业："
                    android:textColor="#666666"
                    android:textSize="16.5sp"/>
                <EditText
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="IT互联网"
                    android:textColor="#31c5e4"
                    android:textSize="14.5sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="行业："
                    android:textColor="#666666"
                    android:textSize="16.5sp"/>
                <EditText
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="IT互联网"
                    android:textColor="#31c5e4"
                    android:textSize="14.5sp"/>
            </LinearLayout>

        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_centerVertical="true"
            android:background="#edf1f2">
            <LinearLayout
                android:id="@+id/ll_activity_choose_skill_labels"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:orientation="vertical">

            </LinearLayout>
        </ScrollView>
        



    </RelativeLayout>
</layout>

