<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable name="publishServiceBaseInfoModel"
                  type="com.slash.youth.ui.viewmodel.PublishServiceBaseInfoModel"/>
    </data>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
    >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/shape_rectangle_gradient_publish_demand2"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="21dp"
                    android:layout_centerVertical="true"
                    android:onClick="@{publishServiceBaseInfoModel.gotoBack}"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:src="@mipmap/nav_back"
                />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="发布服务"
                    android:textColor="#ffffff"
                    android:textSize="17sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="12dp"
                    android:onClick="@{publishServiceBaseInfoModel.gotoSkillManagerActivity}"
                    android:text="技能管理"
                    android:textColor="#FFFFFF"
                    android:textSize="15sp"
                />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:scaleType="fitXY"
                    android:src="@mipmap/timeline_2"
                />
                <View
                    android:layout_width="15dp"
                    android:layout_height="15dp" android:layout_gravity="center_vertical"
                    android:background="@mipmap/point_time"/>
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:scaleType="fitXY"
                    android:src="@mipmap/timeline_2"
                />
                <View
                    android:layout_width="15dp" android:layout_height="15dp"
                    android:layout_gravity="center_vertical"
                    android:background="@mipmap/timeline_point"/>
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:scaleType="fitXY"
                    android:src="@mipmap/timeline_2"
                />
                <View
                    android:layout_width="15dp" android:layout_height="15dp"
                    android:layout_gravity="center_vertical"
                    android:background="@mipmap/timeline_point"/>
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:scaleType="fitXY"
                    android:src="@mipmap/timeline_2"
                />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:orientation="horizontal">
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="基本信息"
                    android:textColor="#FFFFFF"
                    android:textSize="11dp"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="补充信息"
                    android:textColor="#FFFFFF"
                    android:textSize="11dp"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:text="发布成功"
                    android:textColor="#FFFFFF"
                    android:textSize="11dp"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="7dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/shape_rounded_demand2_baseinfo_inner_bg"
                android:orientation="vertical"
            >
                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                    >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="14dp"
                            android:layout_marginRight="14dp"
                            android:layout_marginTop="14dp"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:text="发布方式"
                                android:textColor="#333333"
                                android:textSize="14sp"/>

                            <ImageView
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="5dp"
                                android:src="@mipmap/question_icon"/>

                            <View
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                android:layout_weight="1"/>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:onClick="@{publishServiceBaseInfoModel.checkRealName}"
                                android:orientation="horizontal">
                                <ImageView
                                    android:id="@+id/iv_public_service_realname_icon"
                                    android:layout_width="17dp"
                                    android:layout_height="17dp"
                                    android:layout_gravity="center_vertical"
                                    android:src="@mipmap/pitchon_btn"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginLeft="8dp"
                                    android:text="实名发布"
                                    android:textColor="#999999"
                                    android:textSize="13sp"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="10dp"
                                android:onClick="@{publishServiceBaseInfoModel.checkAnonymous}"
                                android:orientation="horizontal">
                                <ImageView
                                    android:id="@+id/iv_publish_service_anonymous_icon"
                                    android:layout_width="17dp"
                                    android:layout_height="17dp"
                                    android:layout_gravity="center_vertical"
                                    android:src="@mipmap/default_btn"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginLeft="8dp"
                                    android:text="匿名发布"
                                    android:textColor="#999999"
                                    android:textSize="13sp"/>

                            </LinearLayout>

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginLeft="14dp"
                            android:layout_marginRight="14dp"
                            android:layout_marginTop="15dp"
                            android:background="#E5E5E5"/>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="14dp"
                            android:layout_marginRight="14dp"
                            android:layout_marginTop="17dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="服务标题"
                                android:textColor="#333333"
                                android:textSize="14sp"/>

                            <EditText
                                android:id="@+id/et_publish_service_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:background="@android:color/transparent"
                                android:hint="请输入5-20个字"
                                android:textColorHint="#CCCCCC"
                                android:textSize="14sp"/>

                        </RelativeLayout>

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="121dp"
                            android:layout_marginLeft="14dp"
                            android:layout_marginRight="14dp"
                            android:layout_marginTop="18dp"
                            android:background="@drawable/shape_rounded_demand2_desc_bg">
                            <EditText
                                android:id="@+id/et_publish_service_desc"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="5dp"
                                android:layout_marginTop="10dp"
                                android:background="@android:color/transparent"
                                android:gravity="top|left"
                                android:hint="描述一下你的服务300字内"
                                android:textColorHint="#cccccc"
                                android:textSize="16sp"/>

                            <TextView
                                android:id="@+id/tv_desc_text_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right|bottom"
                                android:layout_marginBottom="10dp"
                                android:layout_marginRight="5dp"
                                android:text="0/300"
                                android:textColor="#cccccc"
                                android:textSize="16dp"/>
                        </FrameLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="14dp"
                            android:layout_marginRight="14dp"
                            android:layout_marginTop="15dp"
                            android:orientation="horizontal"
                        >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:text="闲置时间"
                                android:textColor="#333333"
                                android:textSize="14sp"/>

                            <View
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                android:layout_weight="1"/>

                            <TextView
                                android:id="@+id/tv_public_service_time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:text="选择下面标签"
                                android:textColor="#CCCCCC"
                                android:textSize="13sp"/>

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="5dp"
                                android:onClick="@{publishServiceBaseInfoModel.deleteCustomTime}"
                                android:src="@mipmap/close1_icon"
                                android:visibility="@{publishServiceBaseInfoModel.deleteCustomTimeIconVisibility}"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="14dp"
                            android:layout_marginRight="14dp"
                            android:layout_marginTop="14dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_idletime_afterwork"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/shape_idletime_label_bg_unselected"
                                android:onClick="@{publishServiceBaseInfoModel.checkIdleTimeAfterWork}"
                                android:paddingBottom="4dp"
                                android:paddingLeft="9dp"
                                android:paddingRight="9dp"
                                android:paddingTop="4dp"
                                android:text="下班后"
                                android:textColor="#FFFFFF"
                                android:textSize="13sp"/>

                            <TextView
                                android:id="@+id/tv_idletime_weekend"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="9dp"
                                android:background="@drawable/shape_idletime_label_bg_unselected"
                                android:onClick="@{publishServiceBaseInfoModel.checkIdleTimeWeekend}"
                                android:paddingBottom="4dp"
                                android:paddingLeft="15dp"
                                android:paddingRight="15dp"
                                android:paddingTop="4dp"
                                android:text="周末"
                                android:textColor="#FFFFFF"
                                android:textSize="13sp"/>

                            <TextView
                                android:id="@+id/tv_idletime_afterwork_and_weekend"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="9dp"
                                android:background="@drawable/shape_idletime_label_bg_unselected"
                                android:onClick="@{publishServiceBaseInfoModel.checkIdleTimeAfterWorkAndWeekend}"
                                android:paddingBottom="4dp"
                                android:paddingLeft="9dp"
                                android:paddingRight="9dp"
                                android:paddingTop="4dp"
                                android:text="下班后及周末"
                                android:textColor="#FFFFFF"
                                android:textSize="13sp"/>

                            <TextView
                                android:id="@+id/tv_idletime_anytime"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="9dp"
                                android:background="@drawable/shape_idletime_label_bg_unselected"
                                android:onClick="@{publishServiceBaseInfoModel.checkIdleTimeAnytime}"
                                android:paddingBottom="4dp"
                                android:paddingLeft="15dp"
                                android:paddingRight="15dp"
                                android:paddingTop="4dp"
                                android:text="随时"
                                android:textColor="#FFFFFF"
                                android:textSize="13sp"/>


                        </LinearLayout>

                        <android.support.v7.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="28dp"
                            android:layout_marginLeft="14dp"
                            android:layout_marginTop="14dp"
                            android:onClick="@{publishServiceBaseInfoModel.chooseCustomIdleTime}"

                            app:cardBackgroundColor="#ffffff"
                            app:cardCornerRadius="2dp"
                            app:cardElevation="2dp"
                            app:cardUseCompatPadding="true"
                        >

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="15dp"
                                    android:layout_height="15dp"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginLeft="5dp"
                                    android:src="@mipmap/clock_icon"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginLeft="7dp"
                                    android:layout_marginRight="5dp"
                                    android:text="自定义"
                                    android:textColor="#31C5E4"
                                    android:textSize="14sp"/>
                            </LinearLayout>

                        </android.support.v7.widget.CardView>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginLeft="14dp"
                            android:layout_marginRight="14dp"
                            android:layout_marginTop="15dp"
                            android:background="#E5E5E5"/>


                        <com.slash.youth.ui.view.SlashAddPicLayout
                            android:id="@+id/sapl_publish_service_addpic"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                        </com.slash.youth.ui.view.SlashAddPicLayout>


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="14dp"
                            android:layout_marginTop="24dp"
                            android:text="＊建议上传清晰度高的图片上限5张"
                            android:textColor="#CCCCCC"
                            android:textSize="11sp"/>

                        <View android:layout_width="0dp" android:layout_height="0dp"
                              android:layout_weight="1"/>

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="67dp"
                            android:background="@mipmap/demand_layer_3">

                            <Button
                                android:layout_width="252dp"
                                android:layout_height="50dp"
                                android:layout_gravity="center"
                                android:layout_marginTop="5dp"
                                android:background="@drawable/btn_next_step"
                                android:onClick="@{publishServiceBaseInfoModel.nextStep}"
                                android:text="下一步"
                                android:textColor="#FFFFFF"
                                android:textSize="15sp"/>

                        </FrameLayout>

                    </LinearLayout>

                </ScrollView>

            </LinearLayout>

        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#66000000"
            android:clickable="true"
            android:visibility="@{publishServiceBaseInfoModel.setStartTimeAndEndTimeLayerVisibility}"
        >

            <FrameLayout
                android:layout_width="269dp"
                android:layout_height="214dp"
                android:layout_gravity="center">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#F8F8F8"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="24dp"
                        android:text="选择闲置时间"
                        android:textColor="#333333"
                        android:textSize="15sp"/>

                    <TextView
                        android:id="@+id/tv_start_time"
                        android:layout_width="231dp"
                        android:layout_height="43dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/shape_starttime_text_bg"
                        android:gravity="center"
                        android:onClick="@{publishServiceBaseInfoModel.chooseStartTime}"
                        android:text="开始时间"
                        android:textColor="#CCCCCC"
                        android:textSize="14sp"/>

                    <TextView
                        android:id="@+id/tv_end_time"
                        android:layout_width="231dp"
                        android:layout_height="43dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="15dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/shape_starttime_text_bg"
                        android:gravity="center"
                        android:onClick="@{publishServiceBaseInfoModel.chooseEndTime}"
                        android:text=" 结束时间"
                        android:textColor="#CCCCCC"
                        android:textSize="14sp"/>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#ffffff">

                        <Button
                            android:layout_width="170dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:background="@drawable/btn_next_step"
                            android:onClick="@{publishServiceBaseInfoModel.okChooseIdleStartTimeAndEndTime}"
                            android:text="确定"
                            android:textColor="#FFFFFF"
                            android:textSize="12sp"/>

                    </FrameLayout>

                </LinearLayout>

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="right"
                    android:layout_marginRight="9dp"
                    android:layout_marginTop="9dp"
                    android:onClick="@{publishServiceBaseInfoModel.closeStartTimeAndEndTimeLayer}"
                    android:src="@mipmap/withdraw_cash_close_icon"/>


            </FrameLayout>

        </FrameLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#66000000"
            android:clickable="true"
            android:visibility="@{publishServiceBaseInfoModel.chooseDateTimeLayerVisibility}"
        >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="#ffffff"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="@{publishServiceBaseInfoModel.cancelChooseTime}"
                        android:padding="12dp"
                        android:text="取消"
                        android:textColor="#999999"
                        android:textSize="18dp"
                    />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:onClick="@{publishServiceBaseInfoModel.okChooseTime}"
                        android:padding="12dp"
                        android:text="确定"
                        android:textColor="#999999"
                        android:textSize="18dp"
                    />
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E5E5E5"/>
                <com.slash.youth.ui.view.SlashDateTimePicker
                    android:id="@+id/sdtp_publish_service_choose_datetime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="36dp"
                    android:paddingLeft="27dp"
                    android:paddingRight="37dp"
                    android:paddingTop="37dp"
                >

                </com.slash.youth.ui.view.SlashDateTimePicker>
            </LinearLayout>

        </RelativeLayout>

    </FrameLayout>
</layout>
