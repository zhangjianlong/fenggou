<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.slash.youth.v2.feature.bindingaccount.BindingViewModel" />
    </data>

    <LinearLayout
        android:background="@color/app.theme.background_edf1f2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <android.support.v7.widget.Toolbar
            app:title="@string/app.binding.phone"
            app:titleTextColor="@color/black_light"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </android.support.v7.widget.Toolbar>


        <TextView
            android:background="@color/app.theme.background_edf1f2"
            style="@style/App.Theme.Linear.TvItem"
            android:text="@string/app.binding.risk.hint"
            />
        <EditText
            style="@style/App.Theme.Linear.EdItem"
            android:hint="@string/app.login.phone" />

        <RelativeLayout
            android:layout_marginRight="@dimen/app.margin.large12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <EditText
                style="@style/App.Theme.Linear.EdItem"
                android:id="@+id/ed_verify_code"
                android:hint="@string/app.login.verify.edit" />

            <TextView
                android:id="@+id/tv_get_verify_code"
                style="@style/App.Theme.Linear.TvItem.WW"
                android:layout_alignParentRight="true"
                android:layout_alignBaseline="@+id/ed_verify_code"
                android:text="@string/app.binding.get.verify.code"
              />

            <view
                app:border_color="@color/app.theme.background_edf1f2"
                android:layout_centerVertical="true"
                android:layout_alignLeft="@+id/tv_get_verify_code"
                android:layout_width="0.1dp"
                android:layout_height="30dp"
                />

        </RelativeLayout>

        <Button
            style="@style/App.Theme.Linear.BtnItemWW"
            android:id="@+id/btn_binding"
            android:text="进入"
            app:clickCommand="@{viewModel.binding}" />

    </LinearLayout>
</layout>