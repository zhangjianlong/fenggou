<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="App.Theme.Splash" parent="App.Theme">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="WarpLinearLayoutDefault">
        <item name="grivate">left</item>
        <item name="horizontal_Space">20dp</item>
        <item name="vertical_Space">20dp</item>
        <item name="isFull">false</item>
    </style>


    <style name="NoBackGroundDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.6</item>
    </style>


    <style name="App.Theme.RelativeLayout">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/app.margin.large12</item>
        <item name="android:layout_marginLeft">@dimen/app.margin.large12</item>
    </style>

    <style name="App.Theme.EditText">
        <item name="android:background">@color/white</item>
        <item name="android:textColorHint">@color/app.text.blackCCC</item>
        <item name="android:textColor">@color/app.text.black</item>
        <item name="android:textSize">@dimen/app.text.normal</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:padding">@dimen/app.padding.large13</item>
        <item name="android:layout_marginBottom">@dimen/app.margin.normal</item>
        <item name="android:layout_marginLeft">@dimen/app.margin.large12</item>
        <item name="android:layout_marginTop">@dimen/app.margin.normal</item>
    </style>

    <style name="App.Theme.TextView">
        <item name="android:padding">@dimen/app.padding.large13</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/app.text.blackCCC</item>
        <item name="android:textSize">@dimen/app.text.normal</item>

    </style>

    <style name="App.Theme.Button">
        <item name="android:background">@drawable/selector_cccc_2radius</item>
        <item name="android:textColorHint">@color/app.text</item>
        <item name="android:textColor">@color/app.text</item>
        <item name="android:textSize">@dimen/app.text.normal</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:padding">@dimen/app.padding.large13</item>
        <item name="android:layout_marginBottom">@dimen/app.margin.normal</item>
        <item name="android:layout_marginLeft">@dimen/app.margin.large12</item>
        <item name="android:layout_marginRight">@dimen/app.margin.large12</item>
        <item name="android:layout_marginTop">@dimen/app.margin.large12</item>
    </style>


    <!--toolbar style-->
    <style name="App.Theme.Widget.Toolbar.Back">
        <!--<item name="android:homeAsUpIndicator">@mipmap/nav_back</item>-->
    </style>

    <style name="customTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">#eb4f38</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabPaddingStart">12dp</item>
        <item name="tabPaddingEnd">12dp</item>
        <item name="textAllCaps">false</item>
        <item name="tabBackground">@color/white</item>
        <item name="tabTextAppearance">@style/App.Theme.TextAppearance.ww.normal.black999</item>
        <item name="tabSelectedTextColor">#eb4f38</item>
    </style>


</resources>
